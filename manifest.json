{
    "manifest_version": 3,
    "name": "freee Transaction Matcher (v1.0)",
    "version": "1.0",
    "description": "明細と添付ファイルの不一致をハイライトし、学習登録を可能にします。",
    "permissions": [
        "storage",
        "activeTab",
        "downloads"
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://secure.freee.co.jp/*"
            ],
            "js": [
                "script.js"
            ],
            "css": [
                "style.css"
            ],
            "run_at": "document_idle"
        }
    ]
}
